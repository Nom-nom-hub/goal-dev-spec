{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/goal-schema.json",
  "title": "Goal Specification",
  "description": "A goal specification for the goal-dev-spec system",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the goal"
    },
    "title": {
      "type": "string",
      "description": "Title of the goal"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the goal"
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of specific objectives to achieve"
    },
    "success_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Measurable criteria for success"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of goal IDs this goal depends on"
    },
    "related_goals": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of related goal IDs"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "default": "medium",
      "description": "Priority level of the goal"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "planned", "in_progress", "completed", "blocked"],
      "default": "draft",
      "description": "Current status of the goal"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "owner": {
      "type": "string",
      "description": "Person/team responsible for the goal"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags for categorization"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "additionalProperties": true
    }
  },
  "required": ["id", "title", "description"],
  "additionalProperties": false
}