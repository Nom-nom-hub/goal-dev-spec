{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/spec-schema.json",
  "title": "Feature Specification",
  "description": "A feature specification for the goal-dev-spec system",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the specification"
    },
    "goal_id": {
      "type": "string",
      "description": "Reference to the parent goal"
    },
    "title": {
      "type": "string",
      "description": "Title of the feature"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the feature"
    },
    "user_stories": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          },
          "action": {
            "type": "string"
          },
          "benefit": {
            "type": "string"
          }
        },
        "required": ["role", "action", "benefit"]
      },
      "description": "List of user stories"
    },
    "acceptance_criteria": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of acceptance criteria"
    },
    "functional_requirements": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of functional requirements"
    },
    "non_functional_requirements": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of non-functional requirements"
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of constraints"
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of assumptions"
    },
    "out_of_scope": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of out-of-scope items"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "reviewed", "approved", "implemented"],
      "default": "draft",
      "description": "Current status of the specification"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "additionalProperties": true
    }
  },
  "required": ["id", "goal_id", "title", "description"],
  "additionalProperties": false
}